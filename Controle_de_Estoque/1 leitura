#include <stdio.h>
#include <stdlib.h>

#define MAX_LINHA 100

int main() {

    int leitura_arquivo();
    int read_that = leitura_arquivo();
    printf(read_that);


    return 0;
}

int leitura_arquivo(){

    FILE * file;
    char linha[MAX_LINHA];

    // Abre o file para leitura
    file = fopen("C:\\Users\\kauve\\Documents\\codes\\C\\projeto_extensao\\estoque.txt", "r");

    if (file == NULL)
    {
        printf("O arquivo nao pode ser aberto\nPor favor, tente novamente.");
        exit(0);
    }
    

    // LÃª e imprime cada linha do file
    while (fgets(linha, MAX_LINHA, file) != NULL) {
        printf("%s", linha);
    }

    // Fecha o file
    fclose(file);

    return 0;
}
